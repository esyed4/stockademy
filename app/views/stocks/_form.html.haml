= form_for @stock do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :stock_symbol
    = f.text_field :stock_symbol
  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :exchange
    = f.text_field :exchange
  .field
    = f.label :ipo
    = f.text_field :ipo
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :weburl
    = f.text_field :weburl
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :industry
    = f.text_field :industry
  .actions
    = f.submit 'Save'
