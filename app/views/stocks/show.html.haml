%p#notice= notice

- if @stock == {}
  %p Stock does not exist
- else

  %p
    %b Stock symbol:
    = @stock.stock_symbol
  %p
    %b Company name:
    = @stock.company_name
  %p
    %b Description:
    = @stock.description
  %p
    %b Currency:
    = @stock.currency
  %p
    %b Country:
    = @stock.country
  %p
    %b Exchange:
    = @stock.exchange
  %p
    %b Ipo:
    = @stock.ipo
  %p
    %b Phone:
    = @stock.phone
  %p
    %b Weburl:
    = @stock.weburl
  %p
    %b Logo:
    = @stock.logo
  %p
    %b Industry:
    = @stock.industry
  %p
    %b Price:
    = "$#{@current_price}"

  = link_to 'Back', stocks_path
